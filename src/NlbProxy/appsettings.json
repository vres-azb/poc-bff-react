{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "bff-route": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "nlb/{**catch-all}"
        },
        "Transforms":[
          {"PathPattern":"{**catch-all}"}
        ]
      }
    },
    "Clusters": {
      "cluster1": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "cluster1/destination1": {
            "Address": "https://localhost:44447/"
          },
          "cluster1/destination2": {
            "Address": "https://localhost:44457/"
          }
        }
      }
    }
  }
}