{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "bff-route": {
        "ClusterId": "cluster1",
        //"CorsPolicy": "cors-nlb", // HACK: This is only to demonstrate a CORS policy in code
        "Match": {
          "Hosts": [ "localhost" ]
        }
      }
    },
    "Clusters": {
      "cluster1": {
        "LoadBalancingPolicy": "RoundRobin",
        "HttpClient": {
          "SslProtocols": [
            "Tls11",
            "Tls12"
          ]
        },
        "Destinations": {
          "cluster1/destination1": {
            "Address": "https://localhost:44447/"
          },
          "cluster1/destination2": {
            "Address": "https://localhost:44457/"
          }
        }
      }
    }
  }
}